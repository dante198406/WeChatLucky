<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf6f1"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/main_action_bar_placeholder"
            android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/textView"
        android:background="#d65645" />
       <TextView
           android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:autoText="false"
           android:background="@mipmap/bg_action_bar"
           android:gravity="center_vertical|center_horizontal"
           android:text="微信红包"
            android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#fee1b4"
           android:textSize="26dp" />
    <ImageView
        android:id="@+id/imageView3"
            android:layout_width="44dp"
            android:layout_height="44dp"
        android:layout_alignLeft="@+id/textView"
            android:layout_below="@+id/main_action_bar_placeholder"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:onClick="openNews"
        android:padding="10dp"
        android:src="@mipmap/ic_books" />

    <ImageView
        android:id="@+id/imageView2"
            android:layout_width="44dp"
            android:layout_height="44dp"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/main_action_bar_placeholder"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:onClick="openSettings"
            android:padding="10dp"
        android:src="@mipmap/ic_settings" />
    <ImageView
        android:id="@+id/imageView"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="openGithub"
        android:scaleType="centerInside"
        android:src="@mipmap/open"
    />
    <TextView
        android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
            android:gravity="center" android:onClick="openGithub"
        android:paddingBottom="1dp"
        android:paddingTop="6dp"
        android:text="@string/app_version"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="#c5a45e" />
    <TextView
        android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:clickable="true"
        android:onClick="openGithubReleaseNotes"
        android:text="查看最新版本功能介绍"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#999999" />
    <TextView
        android:id="@+id/github"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:onClick="openGithub"
        android:text="https://github.com/geeeeeeeeek/WeChatLuckyMoney"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#5272ae" />
    <Button
            android:id="@+id/button_accessible"
        style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
        android:layout_above="@+id/github"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#24e2b379"
        android:onClick="onButtonClicked"
        android:text="@string/service_name"
        android:textColor="#c5a45e"
            android:textSize="20dp"/>
</RelativeLayout>
